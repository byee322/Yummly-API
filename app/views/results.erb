<div class ="show_results">

	<p>Results Found: <%= @results.count %></p>

	<% @results.each do |recipe|%>

	<ul>
		<img src=<%=recipe.images.first.small_url%>>

		<div class ="recipe_names">
			<a href="#" class="show_ingredients"><h3><%= recipe.recipe_name %></h3></a>

			<div class ="ingredients">
				<% recipe.ingredients.each do |i| %>
				<li><%= i %></li>
				<% end %>
			</div>

		</div>
	</ul>
	<% end %>
</div>